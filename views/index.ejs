<%- include("partials/header")%>
<div class="main-page-el">
    <div class="text-el">
        <div class="text-content">
            <h1>Welcome to <span>Blog!</span></h1>
            <h3>Join our community where everyone can share their thoughts, stories,
                and ideas. Create unique posts, read interesting articles from other
                users, and take part in engaging discussions.<br>
                👉🏻 Publish your own posts <br>
                👉🏻 Share experiences and knowledge <br>
                👉🏻 Read and comment on fascinating content</h3>
        </div>
        <div class="buttons">
            <button id="signUpBtn" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#signUpModal">Sign up</button>
            <button id="logInBtn" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#logInModal">Log in</button>
        </div>
    </div>
    <img src="/image/work-img.png" alt="work image" id="mainImg">
    <div class="modal fade" id="signUpModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticSignUpModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title fs-5" id="staticSignUpModalLabel">Sign up</h2>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/signUp">
                        <label for="signUpEmail">Email:</label>
                        <input type="email" name="sign-up-email" id="signUpEmail" class="form-input">
                        <label for="signUpName">Name:</label>
                        <input type="text" name="sign-up-user-name" id="signUpName" class="form-input">
                        <label for="signUpPassword">Password:</label>
                        <input type="password" name="sign-up-password" id="signUpPassword" class="form-input">
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Sign up</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="logInModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticLogInModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title fs-5" id="staticLogInModalLabel">Log in</h2>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/logIn">
                        <label for="logInName">Name:</label>
                        <input type="text" name="log-in-user-name" id="logInName" class="form-input">
                        <label for="logInPassword">Password:</label>
                        <input type="password" name="log-in-password" id="logInPassword" class="form-input">
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Log in</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>